                <div class="col-12 col-sm-6 col-md-3 mb-3 text-center card  card-sem" id="sem<%= i %>">
                    <div class="icon">
                        <i class="fas da-star"></i>
                    </div>
                    <div class="card-side-content">
                        <h6>First Semester</h6>
                        <p class="fs-6">C Programming Language</p>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

